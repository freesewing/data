{
    "name": "freesewing/data",
    "description": "Data API for the freesewing frontend",
    "homepage": "https://freesewing.org/",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Joost De Cock",
            "email": "joost@decock.org",
            "homepage": "http://joost.decock.org/",
            "role": "Developer"
        }],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "mailgun/mailgun-php": "^2.3",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message": "^1.5",
        "tuupola/slim-jwt-auth": "^2.3",
        "tuupola/base62": "^0.8.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
